@import '../../style/weui.wxss';

.nav {
    width: 100%;
    height: 130rpx;
    background-color: rgba(245, 40, 21, 0.794);
    margin: 0 auto;
    text-align: left;
}

.title {
    font-size: 40rpx;
    color: #fff;
    line-height: 130rpx;
    margin-left: 30rpx;
    font-family: '黑体';
}

.page__hd {
    padding: 40px;
}

.page__bd {
    padding-bottom: 40px;
}

.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft {
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}